    <h4 style="padding: 20px">1more drink!</h4>
    <div class="container" >
        <div class="btn-group" data-toggle="buttons">
            <label class="btn btn-primary"><input type="radio" name="options1" id="option11" autocomplete="off">エスプレッソ</label>
            <label class="btn btn-primary"><input type="radio" name="options1" id="option12" autocomplete="off">エスプレッソダブル</label>
            <label class="btn btn-primary"><input type="radio" name="options1" id="option13" autocomplete="off">カフェジャポーネ</label>
        </div>
        <div class="btn-group" data-toggle="buttons">
            <label class="btn btn-primary"><input type="radio" name="options2" id="option21" autocomplete="off">エスプレッソ</label>
            <label class="btn btn-primary"><input type="radio" name="options2" id="option22" autocomplete="off">エスプレッソLarge</label>
            <label class="btn btn-primary"><input type="radio" name="options2" id="option23" autocomplete="off">ロングコーヒー</label>
            <label class="btn btn-primary"><input type="radio" name="options2" id="option24" autocomplete="off">ロングコーヒーLarge</label>
        </div>
    </div>

    <div class="container" style="padding: 20px">
        <div class="row">
            <div class="col-sm-6">
            <table class="table table-striped table-hover">
                <thead>
                    <tr><th>ID</th><th>name</th><th>dcount</th><th></th></tr>
                </thead>
                <tbody>
                    <% for i in 0..2 %>
                        <% if i < @users_drink_counts.length %>
                            <tr>
                                <td><%= @users_drink_counts[i].id %></td>
                                <td><%= @users_drink_counts[i].name %></td>
                                <td id="td-user-id-<%=@users_drink_counts[i].id %>"><%= @users_drink_counts[i].dcount %></td>
                                <td>
                                    <div class="form-group">
                                        <%= form_tag(drink_counts_path, method: "POST", remote: true ) do %>
                                            <%= hidden_field_tag :user_id, @users_drink_counts[i].id %>
                                            <%= submit_tag "drink!!!", class: "btn btn-primary" %>
                                        <!--<input type="submit" value="drink!" class="btn btn-primary">-->
                                        <% end %>
                                    </div>
                                </td>
                            </tr>
                        <% end %>
                    <% end %>
                </tbody>
            </table>
            </div>
            <div class="col-sm-6">
