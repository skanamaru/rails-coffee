                                        <%= form_tag(drink_counts_path, method: "POST", remote: true ) do %>
                                            <%= hidden_field_tag :user_id, @users_drink_counts[i].id %>
                                            <%= submit_tag "drink!!!", class: "btn btn-primary" %>
                                        <!--<input type="submit" value="drink!" class="btn btn-primary">-->
                                        <% end %>
                                    </div>
                                </td>
                            </tr>
                        <% end %>
                    <% end %>
                </tbody>
            </table>
            </div>
        </div>
    </div>
